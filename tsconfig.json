{
    "compilerOptions": {
        "target": "es2019",
        "allowJs": true,
        "module": "commonjs",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "resolveJsonModule": true,
        "outDir": "dist",
        "sourceMap": true,
        "strict": true,
        "typeRoots": ["types", "node_modules/@types"]
    },
    "baseUrl": ".",
    "paths": {
        "@/*": ["src/*"]
    },
    "include": ["src/**/*.ts", "src/**/*.js"],
    "exclude": ["node_modules"]
}
